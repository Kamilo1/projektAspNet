@model projektAspNet.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RouteID" class="control-label"></label>
                <p>Choose route which you interested</p>
                <select asp-for="RouteID" class ="form-control" asp-items="ViewBag.RouteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <p>Choose your PESEL if it is not here go to create customer</p>
                <select asp-for="CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfKayaking" class="control-label"></label>
                <input asp-for="DateOfKayaking" class="form-control" />
                <span asp-validation-for="DateOfKayaking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KayakType" class="control-label"></label>
                <select asp-for="KayakType" class="form-control" >
                    <option>pojedynczy</option>
                    <option>podwójny</option>
                    </select>
                <span asp-validation-for="KayakType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfKayaks" class="control-label"></label>
                <input asp-for="NumberOfKayaks" class="form-control" />
                <span asp-validation-for="NumberOfKayaks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
